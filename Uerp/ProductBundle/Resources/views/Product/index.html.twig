{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Produtos {% endblock %}

{% block body -%}
    <div class="panel panel-info" style="margin: 20px">
    <div class="panel-heading">
        <h3>Lista de Produtos</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Cod de Barras</th>
                        <th>Descrição</th>
                        <th>Custo</th>
                        <th>Preço</th>
                        <th>Referencia</th>
                        <th>Aux</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>


                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.barcode }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.cost }}</td>
                        <td>{{ entity.price }}</td>
                        <td>{{ entity.sku }}</td>
                        <td>{{ entity.aux }}</td>
                        <td>

                        <a  class="btn btn-info btn-xs" href="{{ path('product_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Detales</a>
                        <a  class="btn btn-warning btn-xs" href="{{ path('product_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i> Editar</a>

                        </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
    </div>

        <ul>
        <li>
              <a  class="btn btn-success" href="{{ path('product_new')  }}"><i class="fa fa-plus"></i> Novo Produto</a>
        </li>
    </ul>
    {% endblock %}
