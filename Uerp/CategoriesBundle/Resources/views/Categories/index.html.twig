{% extends 'UerpMainBundle::main.html.twig' %}
{% block title %} Categorias {% endblock %}


{% block body -%}
<div class="panel panel-info" style="margin: 20px">
<div class="panel-heading">
    <h3>Lista de Categorias</h3>
</div>
<div class="panel-body">
    <table class="table table-striped table-advance table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Var</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>


            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descriptioncategories }}</td>
                <td>{{ entity.varcategories }}</td>
                <td>
                  <a  class="btn btn-info btn-xs" href="{{ path('categories_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Detalhes</a>
                  <a  class="btn btn-warning btn-xs" href="{{  path('categories_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i> Editar</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
</div>

    <ul>
    <li>
          <a  class="btn btn-success" href="{{path('categories_new')   }}"><i class="fa fa-plus"></i> Nova Categoria </a>
    </li>
</ul>

{% endblock %}
